<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgroundGrey"
    android:layout_margin="7dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:contentPadding="0dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_item_layout"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorBackgroundGrey"
        android:orientation="vertical">


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            card_view:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSliderBackground"
                android:contentDescription="content_image"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/star_e"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="20dp"
                android:textColor="#ffffffff"
                android:src="@drawable/favorite_off"
                android:contentDescription="@string/favorite_icon"
                android:scaleType="fitXY"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/event_short_description"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="#80000000"
                android:padding="12dp"
                android:textSize="15sp"
                android:text="Short event description"
                android:textColor="#ffffffff" />

        </android.support.v7.widget.CardView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhiteBackground"
            android:gravity="end"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/distance_icon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/distance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="2dp"
                android:background="@color/colorWhiteBackground"
                android:textColor="@color/colorTextColor" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhiteBackground"
                android:padding="4dp"
                android:text="15"
                android:textColor="@color/colorTextColor" />

            <RatingBar
                android:id="@+id/bar_rate"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
